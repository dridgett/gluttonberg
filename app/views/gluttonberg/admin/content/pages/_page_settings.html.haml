- unless @pages.empty?
  %fieldset
    = f.label :parent_id , "Parent page"
    = f.select(:parent_id, @pages.collect{|p| [p.name , p.id] }, :include_blank => true, :class=>"medium")
%fieldset
  = f.label :hide_in_nav, "Hide in navigation"
  = f.check_box(:hide_in_nav, :class=>"medium")
